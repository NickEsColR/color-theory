---
// Color picker component with input controls
---

<section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8 animate-fade-in">
  <div class="flex flex-col md:flex-row items-center gap-6">
    <div class="flex-1">
      <label for="color-picker" class="block text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
        Selecciona un color:
      </label>
      <div class="flex items-center gap-4">
        <input 
          type="color" 
          id="color-picker" 
          value="#000000"
          class="w-16 h-16 rounded-lg border-2 border-gray-300 dark:border-gray-600 cursor-pointer hover:border-blue-500 transition-colors"
          aria-label="Selector de color"
        />
        <div class="flex-1">
          <input 
            type="text" 
            id="hex-input" 
            value="#000000"
            placeholder="#000000"
            class="w-full px-4 py-3 text-lg font-mono bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-800 dark:text-gray-200"
            pattern="^#[0-9A-Fa-f]{6}$"
            title="Ingresa un código hexadecimal válido (ej: #000000)"
          />
        </div>
      </div>
    </div>
  </div>
</section>
