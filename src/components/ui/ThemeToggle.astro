  </svg>
  <svg id="moon-icon" class="col-start-1 row-start-1 h-5 w-5 text-gray-700 opacity-100 transition-all duration-300 dark:opacity-0 group-hover:rotate-12 group-focus:rotate-12" fill="currentColor" viewBox="0 0 20 20">
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  
  // Check for saved theme or default to light mode
  const currentTheme = localStorage.getItem('theme') || 'light';
  
  const isDark = document.body.classList.contains('dark');
  
  // Toggle theme function
  function toggleTheme() {
    const isDark = document.body.classList.contains('dark');
    document.body.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'light' : 'dark');
  }
  
  // Add event listener
  themeToggle?.addEventListener('click', toggleTheme);

  // Set initial theme
  if (isDark && currentTheme === 'light'){
    toggleTheme();
  }
</script>
